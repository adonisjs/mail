{
  "name": "@adonisjs/mail",
  "version": "7.2.5",
  "description": "Mail provider for adonis framework and has support for all common mailing services to send emails",
  "main": "build/providers/MailProvider.js",
  "files": [
    "build/adonis-typings",
    "build/providers",
    "build/src",
    "build/commands",
    "build/templates",
    "build/instructions.js",
    "build/instructions.d.ts",
    "build/instructions.md"
  ],
  "typings": "./build/adonis-typings/index.d.ts",
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node .bin/test.js",
    "clean": "del build",
    "copyfiles": "copyfiles \"templates/**/*.txt\" \"instructions.md\" build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile && npm run copyfiles",
    "commit": "git-cz",
    "release": "np --message=\"chore(release): %s\"",
    "version": "npm run build",
    "format": "prettier --write .",
    "prepublishOnly": "npm run build",
    "sync-labels": "github-label-sync --labels ./node_modules/@adonisjs/mrm-preset/gh-labels.json adonisjs/mail",
    "lint": "eslint . --ext=.ts"
  },
  "keywords": [
    "adonis",
    "mailer",
    "node-mailer"
  ],
  "author": "virk",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/core": "^5.5.0",
    "@adonisjs/mrm-preset": "^5.0.2",
    "@adonisjs/repl": "^3.1.8",
    "@adonisjs/require-ts": "^2.0.10",
    "@adonisjs/sink": "^5.2.2",
    "@adonisjs/view": "^6.1.2",
    "@poppinss/dev-utils": "^2.0.2",
    "@types/node": "^17.0.21",
    "aws-sdk": "^2.1082.0",
    "commitizen": "^4.2.4",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^4.0.1",
    "dotenv": "^16.0.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "github-label-sync": "^2.0.2",
    "husky": "^7.0.4",
    "japa": "^4.0.0",
    "luxon": "^2.3.1",
    "mrm": "^3.0.10",
    "np": "^7.6.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "@adonisjs/core": "^5.1.0",
    "@adonisjs/view": "^6.0.0"
  },
  "dependencies": {
    "@poppinss/colors": "^3.0.1",
    "@poppinss/manager": "^5.0.1",
    "@poppinss/utils": "^4.0.2",
    "fastq": "^1.13.0",
    "get-stream": "^6.0.1",
    "got": "^11.8.2",
    "ical-generator": "^3.2.1",
    "multi-part": "^3.0.0",
    "nodemailer": "^6.7.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/mail.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/mail/issues"
  },
  "homepage": "https://github.com/adonisjs/mail#readme",
  "nyc": {
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js"
    }
  },
  "np": {
    "contents": ".",
    "anyBranch": false,
    "yolo": true
  },
  "publishConfig": {
    "tag": "latest",
    "access": "public"
  },
  "adonisjs": {
    "instructions": "./build/instructions.js",
    "instructionsMd": "./build/instructions.md",
    "types": "@adonisjs/mail",
    "providers": [
      "@adonisjs/mail"
    ],
    "commands": [
      "@adonisjs/mail/build/commands"
    ]
  },
  "mrmConfig": {
    "core": true,
    "license": "MIT",
    "services": [
      "github-actions"
    ],
    "minNodeVersion": "14.15.4",
    "probotApps": [
      "stale",
      "lock"
    ],
    "runGhActionsOnWindows": false
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptPackage",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  }
}
