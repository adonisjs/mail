{
  "name": "@adonisjs/mail",
  "version": "4.0.0",
  "description": "Mail provider for adonis framework and has support for all common mailing services to send emails",
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "main": "build/providers/MailProvider.js",
  "files": [
    "build/adonis-typings",
    "build/providers",
    "build/src"
  ],
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node japaFile.js",
    "lint": "eslint . --ext=.ts",
    "clean": "del build",
    "copyfiles": "copyfiles \"templates/**/*.txt\" build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile && npm run copyfiles",
    "commit": "git-cz",
    "release": "np",
    "version": "npm run build"
  },
  "keywords": [
    "adonis",
    "mailer",
    "node-mailer"
  ],
  "author": "virk",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/fold": "^6.3.4",
    "@adonisjs/mrm-preset": "^2.2.4",
    "@adonisjs/view": "^1.0.10",
    "@types/node": "^13.7.7",
    "aws-sdk": "^2.656.0",
    "commitizen": "^4.0.3",
    "copyfiles": "^2.2.0",
    "cz-conventional-changelog": "^3.1.0",
    "del-cli": "^3.0.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-adonis": "^1.0.8",
    "husky": "^4.2.3",
    "japa": "^3.0.1",
    "mrm": "^2.1.0",
    "np": "^5.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "@adonisjs/view": "^1.x.x",
    "@adonisjs/core": ">=5.0.0-preview"
  },
  "dependencies": {
    "@poppinss/manager": "^2.1.4",
    "nodemailer": "^6.4.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/adonis-mail.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/adonis-mail/issues"
  },
  "homepage": "https://github.com/adonisjs/adonis-mail#readme",
  "nyc": {
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js"
    }
  },
  "np": {
    "contents": ".",
    "anyBranch": false
  },
  "publishConfig": {
    "tag": "alpha",
    "access": "public"
  },
  "adonisjs": {
    "templates": {
      "config": [
        {
          "src": "config.txt",
          "dest": "redis"
        }
      ],
      "contracts": [
        {
          "src": "contract.txt",
          "dest": "redis"
        }
      ]
    },
    "types": "@adonisjs/mail",
    "providers": [
      "@adonisjs/mail"
    ]
  }
}
